<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/umd/popper.js" type="text/javascript"></script>
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1 class="site-heading text-center text-white d-none d-lg-block">
        <span class="site-heading-upper text-primary mb-3">Every day, we connect thousants of people to new opportunities.</span>
        <span class="site-heading-lower text-info">MKD-Employment</span>
    </h1>

    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
        <a class="navbar-brand" href="">MKD-Employment</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
            <ul class="nav navbar-nav">
                <li class="nav-item px-lg-4 "> <a> @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-uppercase text-expanded" })</a></li>
                <li class="nav-item px-lg-4 "> <a>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-uppercase text-expanded" })</a></li>
                <li class="nav-item px-lg-4 "> <a> @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link text-uppercase text-expanded" })</a></li>

            </ul>
            <ul class="nav navbar-nav" id="loginBtn">

                <li class="nav-item px-lg-4 "> <a> @Html.ActionLink("Login", "Login", "Company", null, new { @class = "nav-link text-uppercase text-expanded" })</a></li>
            </ul>
        </div>
    </nav>


    <div id="displayDiv" class="col-md-12 col-sm-12 border border-dark">
        @RenderBody()
    </div>




    <footer id="footer" class="footer-1 footer py-5">
        <div class="main-footer widgets-dark typo-light">
            <div class="container">
                <div class="row">

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget subscribe no-box">
                            <h5 class="widget-title "> MKD-Employment<span></span></h5>
                            <p>
                                MKD-employment is the #1 job site in the Macedonia with over 250 thousant unique visitors every month. MKD-employment strives to put job seekers first, giving them free access to search for jobs and research companies. Every day, we connect thousants of people to new opportunities.

                            </p>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Quick Links<span></span></h5>
                            <ul class="thumbnail-widget">
                                <li>
                                    <div class="thumb-content"><a href="#.">Get Started</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">Top Leaders</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">Success Stories</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">Event/Tickets</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">News</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">Lifestyle</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="#.">About</a></div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Do you have job vacancies ?<span></span></h5>
                            <p>Please don't hesitate to register your company!</p>
                            @Html.ActionLink("Register", "Registration", "Company", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">

                        <div class="widget no-box">
                            <h5 class="widget-title">Contact Us<span></span></h5>

                            <p><a href="mailto:servicesicret@gmail.com" title="glorythemes">info@mkd-employment.com</a></p>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">

                        <p class="">Copyright &copy; MKD-employment @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
@section Scripts{
    <script>
        $("loginBtn")

    </script>
    
    
    }